@{
    ViewData["Title"] = "Access Denied";
}

<div class="row justify-content-center">
    <div class="col-md-6">
        <div class="card shadow-sm border-danger">
            <div class="card-header bg-danger text-white">
                <h2 class="card-title text-center">@ViewData["Title"]</h2>
            </div>
            <div class="card-body text-center">
                <div class="mb-4">
                    <i class="bi bi-exclamation-triangle-fill text-danger" style="font-size: 4rem;"></i>
                </div>
                <h4 class="text-danger">You do not have permission to access this resource.</h4>
                <p class="mt-3">
                    Please contact the administrator if you believe this is an error.
                </p>
                <div class="mt-4">
                    <a asp-controller="Home" asp-action="Index" class="btn btn-outline-primary">Return to Home</a>
                </div>
            </div>
        </div>
    </div>
</div>
