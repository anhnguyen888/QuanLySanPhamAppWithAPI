@model QuanLySanPhamApp.Models.Identity.AdminResetPasswordViewModel

@{
    ViewData["Title"] = "Reset User Password";
}

<h1>@ViewData["Title"]</h1>
<h4>User: @Model.Email</h4>
<hr />

<div class="row">
    <div class="col-md-6">
        <div class="card">
            <div class="card-header">
                <h5 class="mb-0">Set New Password</h5>
            </div>
            <div class="card-body">
                <form asp-action="ResetPassword" method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <input type="hidden" asp-for="UserId" />
                    <input type="hidden" asp-for="Email" />

                    <div class="mb-3">
                        <label asp-for="NewPassword" class="form-label"></label>
                        <input asp-for="NewPassword" class="form-control" />
                        <span asp-validation-for="NewPassword" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="ConfirmPassword" class="form-label"></label>
                        <input asp-for="ConfirmPassword" class="form-control" />
                        <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                    </div>

                    <div class="alert alert-warning">
                        <i class="bi bi-exclamation-triangle"></i> This action will immediately reset the user's password.
                    </div>

                    <div class="mb-3">
                        <button type="submit" class="btn btn-warning">Reset Password</button>
                        <a asp-action="Details" asp-route-id="@Model.UserId" class="btn btn-secondary">Cancel</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
